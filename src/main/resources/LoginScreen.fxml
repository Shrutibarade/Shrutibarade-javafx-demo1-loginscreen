<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="org.dnyanyog.LoginScreenController" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="153.0" layoutY="128.0" text="Login Name">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label layoutX="153.0" layoutY="160.0" text="Password">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Button layoutX="273.0" layoutY="270.0" onAction="#loginButtonClick" text="Login" />
            <TextField fx:id="loginName" layoutX="264.0" layoutY="124.0" promptText="Enter username" />
            <TextField fx:id="password" layoutX="264.0" layoutY="157.0" promptText="Enter password" />
            <Label fx:id="errorMessage" layoutX="264.0" layoutY="200.0" textFill="red" />
         </children>
      </AnchorPane>
   </children>
</VBox>
